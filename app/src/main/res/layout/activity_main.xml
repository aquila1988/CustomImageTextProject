<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.aquila.custom.widget.GroupImageTextLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="10dp"
            app:app_image_height="30dp"
            app:app_image_src="@mipmap/ic_camera"
            app:app_image_width="20dp"
            app:app_padding="20dp"
            app:app_parent_orientation="vertical"
            app:app_scale_type="FIT_XY"
            app:app_text="这个是测试的的问题系"
            app:app_text_margin_image_size="11dp"
            app:app_text_size="12sp"></com.aquila.custom.widget.GroupImageTextLayout>

    </LinearLayout>

    <com.aquila.custom.widget.GroupSlideSwitchLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:app_is_selected="true"
        app:app_switch_height="30dp"
        app:app_switch_width="60dp"
        />

    <com.aquila.custom.widget.GroupSingleChoiceItemLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:app_is_show_right_image="true"
        app:app_text="这个是单选"
        android:background="#f0f0f0"
        />


    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="145dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/book_demo"
            />

        <com.aquila.custom.widget.view.TriangleTextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="试读"
            android:background="#f00"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"

            app:triangle_bg_color="#0a0"
            app:rate="0.4"
            />

    </FrameLayout>


</LinearLayout>